{
  "manifest_version": 3,
  "name": "Practice Chrome Extension",
  "version": "1.0.0",
  "description": "A simple React app as a Chrome extension",
  "action": {
    "default_icon": "icons/logo.png",
    "default_popup": "/popup/popup.html"
  },
  "background": {
    "service_worker": "/popup/background.js",
    "type": "module"
  },
  "permissions": [
    "tabs",
    "declarativeNetRequest",
    "storage",
    "windows",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [{
    "resources": ["popup.html", "icons/*"],
    "matches": ["<all_urls>"]
  }]
}